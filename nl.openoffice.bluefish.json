{
    "app-id": "nl.openoffice.bluefish",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "bluefish",
    "appstream-compose": false,
    "rename-icon": "bluefish",
    "rename-appdata-file": "bluefish.appdata.xml",
    "rename-desktop-file": "bluefish.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=home"
    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "*.la", "*.a",
                "/share/info", "/share/doc"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "bluefish",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.bennewitz.com/bluefish/stable/source/bluefish-2.2.12.tar.bz2",
                    "sha1": "2a9473b08c464a38b63cb68ac3bc8e5624bc29fc"
                }
            ]
        }
    ]
}
