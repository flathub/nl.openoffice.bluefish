{
    "app-id": "nl.openoffice.bluefish",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "bluefish",
    "rename-icon": "bluefish",
    "rename-appdata-file": "bluefish.appdata.xml",
    "rename-desktop-file": "bluefish.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=home"
    ],
  "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/share/pkgconfig",
      "/share/aclocal",
      "/man",
      "/share/man",
      "*.la",
      "*.a",
      "/share/info",
      "/share/doc"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "bluefish",
            "post-install": [
                "mv ${FLATPAK_DEST}/share/mime/packages/bluefish.xml ${FLATPAK_DEST}/share/mime/packages/${FLATPAK_ID}.xml",
                "cd ${FLATPAK_DEST}/share/icons/hicolor; for d in */mimetypes/; do for f in ${d}*; do mv \"$f\" \"${d}${FLATPAK_ID}.$(basename $f)\"; done; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.bennewitz.com/bluefish/stable/source/bluefish-2.2.12.tar.bz2",
                    "sha1": "2a9473b08c464a38b63cb68ac3bc8e5624bc29fc"
                },
                {
                    "type": "patch",
                    "path": "appdata_release_oars.patch"
                }
            ]
        }
    ]
}
